<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <PreferenceCategory
        android:title="Notifications">

        <SwitchPreference
            android:key="shopperNotifKey"
            android:title="Shopper Notifications"
            android:summary="Receive notifications on your list updates"
            android:defaultValue="true" />

        <SwitchPreference
            android:key="requestorNotifKey"
            android:title="Requestor Notifications"
            android:summary="Receive notifications on new lists"
            android:defaultValue="true" />

    </PreferenceCategory>

    <PreferenceCategory
        android:title="Payments">

        <EditTextPreference
            android:key="edittext_preference"
            android:summary="Your account is linked with Stripe"
            android:textColor="@color/colorPrimary"
            />

    </PreferenceCategory>

</PreferenceScreen>
