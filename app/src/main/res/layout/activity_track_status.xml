<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:scrollbars="none"
    tools:context="com.codepath.socialshopper.socialshopper.Activities.TrackStatusActivity">
    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar_main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/tvCheckBackStatus"
        android:layout_below="@+id/toolbar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="@string/label_submitted"
        android:textSize="20sp"
        android:textColor="@color/colorPrimaryDark"
        android:gravity="center"/>
    <ImageView
        android:id="@+id/ivReceiptImg"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_below="@+id/tvCheckBackStatus"
        tools:src="@drawable/lettuce"
        android:layout_centerHorizontal="true"
        android:layout_margin="10dp"
        android:maxHeight="250dp"
        android:maxWidth="250dp"
        android:scaleType="fitXY"
        android:contentDescription="@string/receipt_label" />

    <Button
        android:id="@+id/btnRequestLocation"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:background="@drawable/circular_button"
        android:textColor="@color/colorWhite"
        android:onClick="requestForShoppersLocation"
        android:text="@string/request_location"
        android:layout_below="@+id/ivReceiptImg"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp" />

    <fragment
        android:id="@+id/map"
        class="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_below="@id/btnRequestLocation"
        android:layout_marginTop="10dp"
        android:layout_height="400dp"/>

</RelativeLayout>
